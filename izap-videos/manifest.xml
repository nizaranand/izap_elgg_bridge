<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>iZAP Videos</name>
	<author>iZAP Team</author>
	<version>4.1.2b</version>
	<blurb>Offserver and Onserver video adding functionality for elgg.</blurb>
	<description>This plugin provides full video fucntionality to elgg.</description>
	<website>http://www.pluginlotto.com/store</website>
	<copyright>(C) iZAP Web Solutions</copyright>
	<license>GNU Public License version 2</license>

	<requires>
  	  <type>elgg_version</type>
	  <version>2011122100</version>
	</requires>

    <requires>
      <type>plugin</type>
      <name>izap-elgg-bridge</name>
      <version>2.1</version>
    </requires>

    <requires>
      <type>php_extension</type>
      <name>curl</name>
    </requires>
    
    <suggests>
      <type>php_extension</type>
      <name>pdo_sqlite</name>
    </suggests>
    <priority>
      <plugin>izap-elgg-bridge</plugin>
      <priority>after</priority>
    </priority>
    <screenshot>
      <description>Full play page</description>
      <path>screenshots/full-play-page.png</path>
    </screenshot>
    <screenshot>
      <description>Listing page</description>
      <path>screenshots/listing-page.png</path>
    </screenshot>
    <screenshot>
      <description>Widget</description>
      <path>screenshots/widget.png</path>
    </screenshot>
	<category>Multimedia</category>
	<admin_interface>advanced</admin_interface>
</plugin_manifest>
