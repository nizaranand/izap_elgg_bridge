<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>phloorNews</name>
	<author>void</author>
	<version>1.8-12.01.11</version>
	<category>content</category>
	<category>widget</category>
	<category>PHLOOR</category>
	<description>
	Adds simple news posting capabilities to your Elgg installation. 
	This is really just a clone of the bundled Blog plugin. 
	</description>
	<website>http://phloor.13net.at</website>
	<copyright>See COPYRIGHT.txt</copyright>
	<license>GNU Public License version 2</license>
	<requires>
		<type>elgg_release</type>
		<version>1.8</version>
	</requires>
	<activate_on_install>false</activate_on_install>
	<admin_interface>simple</admin_interface>
	
	<screenshot>
		<description>Phloor News - Group News [1]</description>
		<path>screenshots/screenshot.png</path>
	</screenshot>
		
	<screenshot>
		<description>Phloor News - Group Profile [2]</description>
		<path>screenshots/screenshot-0.png</path>
	</screenshot>
		
	<screenshot>
		<description>Phloor News - User News [3]</description>
		<path>screenshots/screenshot-1.png</path>
	</screenshot>

	<requires>	
		<type>plugin</type>
		<name>phloor</name>
		<version>1.8</version>
	</requires>
	
	<requires>	
		<type>priority</type>
		<plugin>phloor</plugin>
		<priority>after</priority>
	</requires>
		
</plugin_manifest>
